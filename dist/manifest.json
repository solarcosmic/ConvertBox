{
  "manifest_version": 3,
  "name": "ConvertBox",
  "version": "1.0.0",
  "description": "Convert images and more without leaving your browser. Entirely client-sided.",
  "permissions": ["contextMenus", "downloads"],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["images.js", "markdown.js", "qrcode.js"],
      "type": "module"
    }
  ]
}